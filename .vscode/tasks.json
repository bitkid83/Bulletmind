{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean Build (clang-x86-debug)",
            "type": "shell",
            "group": "build",
            "windows": {
                "command": "del /Q ${workspaceFolder}\\out\\windows\\clang-x86-debug\\*",
            }
        },
        {
            "label": "Compile and Link (clang-x86-debug)",
            "type": "shell",
            "group": "build",
            "dependsOn": "Clean Build (clang-x86-debug)",
            "windows": {
                "command": "${workspaceFolder}\\clang-x86-debug-build.bat"
            }
        },
        {
            "label": "Build All (clang-x86-debug)",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "Compile and Link (clang-x86-debug)",
            "windows": {
                "command": "${workspaceFolder}\\clang-x86-debug-copydeps.bat"
            }
        }
    ]
}