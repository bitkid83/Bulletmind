{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build bulletmind",
            "type": "shell",
            "command": "gcc",
            "args": [
                "--std=c99",
                "-O1",
                "-Wall",
                "buffer.c",
                "command.c",
                "entity.c",
                "font.c",
                "imgfile.c",
                "input.c",
                "system.c",
                "timing.c",
                "main.c",
                "-I${workspaceRoot}",
                "-I${workspaceRoot}\\SDL\\Include",
                "-L${workspaceRoot}\\SDL\\lib",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-o ${workspaceRoot}\\x86\\prog.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "taskName": "clean bulletmine",
            "type": "shell",
            "command": "del ${workspaceRoot}\\x86\\prog.exe",
            "args": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}