    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/linux/clang-x64-debug/bulletmind",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/out/linux/clang-x64-debug",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}\\out\\windows\\clang-x86-debug\\bmind.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}\\out\\windows\\clang-x86-debug",
            "environment": [],
            "externalConsole": true
        }
    ]
}